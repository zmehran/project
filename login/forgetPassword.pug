extends ../parsials/layout

block main
    section
        .login
        .container.container-login
            .row
                .col-md-6.box-right
                    .card.card-login
                        .card-body
                            .row.row-input-login
                                form(action="post")
                                    .col-md-12.col-num-1(style="margin-bottom:40px")
                                        img.img-fluid.pictureLogo(src="../images/logo.png")
                                        h3 سیستم کنترل حضور و غیاب / حقوق و دستمزد
                                    .col-md-12.col-num-1-1
                                        span.message-sendSMS
                                            |  شماره همراه یا ایمیلی که باهاش ثبت نام کردی رو وارد کن
                                        span.message-sendSMS
                                            | ما یه لینک برات ارسال میکنیم و  میتونی رمز جدید خودت رو تنظیم کنی :)

                                        //span.message-newpassword

                                    .col-md-12.col-num-2
                                        label.form-label(for='newPass') شماره همراه/آدرس ایمیل
                                        .input-group.groupInput
                                            input#newPass.form-control.user-pass-input(type='text' name='newPass' required="required")
                                            i.bi.bi-send


                                    //.col-md-12.col-num-3
                                        label.form-label(for='newPassRepeat') تکرار رمز عبور جدید
                                        .input-group.groupInput
                                            input#newPassRepeat.form-control.user-pass-input(type='password')
                                            i.bi.bi-key
                                    .col-md-12.col-num-5-sendSMS
                                        button.btn.btn-outline-secondary.btn-cancle
                                            | انصراف
                                        button.btn.btn-primary.btn-green-sendSMS
                                            | ارسال لینک بازیابی رمز
                                #f2.display-none-btn
                                    include formError

                .col-md-6.box-left
                    img.img-fluid.watch-login(src="../images/watchLogin.png")
